<!DOCTYPE html>
<html>
  <head>
    <title>Terjemahan Bahasa</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.rawgit.com/bungfrangki/efeksalju/2a7805c7/efek-salju.js" type="text/javascript"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Aladin&display=swap');
      html, body {
      background-image: url('https://wallpaperaccess.com/full/968295.jpg');
      }
      body, div, form, input, select, textarea, label { 
      outline: none;
      font-family: Aladin, cursive;
      font-size: 14px;
      color: #000000;
      line-height: 22px;
      }
      h1 {
      position: absolute;
      margin: 0;
      font-size: 40px;
      color: #fff;
      z-index: 2;
      line-height: 83px;
      }
      h2 {
        font-size: 20px;
        color: #494a4a;
        font-family: Aladin, cursive;
      }
      .testbox {
      display: flex;
      justify-content: center;
      align-items: center;
      height: inherit;
      padding-top: 500px;
      }
      .body {
      width: 100%;
      padding: 20px;
      border-radius: 6px;
      background-color: #ffffffab;
      box-shadow: 0 0 8px  #cc7a00; 
      }
      .banner {
      position: relative;
      height: 400px;
      background-image: url("https://i.ibb.co/Lgc0vCt/IMG-20220629-WA0017.jpg");
      background-color: #ffffff81;
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      }
      .banner::after {
      content: "";
      background-color: rgba(0, 0, 0, 0.2); 
      position: absolute;
      width: 100%;
      height: 100%;
      }
      input, select, textarea {
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
      }
      input {
      width: calc(100% - 10px);
      text-align: center;
      font-family: Aladin, cursive;
      height: 100px;
      padding: 5px;
      margin-top: 15px;
      }
      .item:hover p, .item:hover i, .question:hover p, .question label:hover, input:hover::placeholder {
      color: #cc7a00;
      }
      .item input:hover, .item select:hover, .item textarea:hover {
      border: 1px solid transparent;
      box-shadow: 0 0 3px 0 #cc7a00;
      color: #cc7a00;
      }
      .item {
      position: relative;
      margin: 10px 0;
      }
      .btn-block {
      margin-top: 10px;
      text-align: center;
      }
      button {
      width: 150px;
      padding: 10px;
      border: none;
      border-radius: 5px; 
      background: #cc7a00;
      font-size: 16px;
      color: #fff;
      cursor: pointer;
      }
      button:hover {
      background: #ad0000;
      outline: transparent;
      }
      @media (min-width: 568px) {
      .name-item, .city-item {
      text-align: center;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      }
      .name-item input, .name-item div {
      text-align: center;
      width: calc(50% - 20px);
      }
      .name-item div input {
      text-align: center;
      width:97%;
      height: 98%;
      }
      .name-item div label {
      display:block;
      text-align: center;
      padding-bottom:5px;
      }
      }
    </style>
  </head>
  <body>
    <%- body %>
  </body>
  <script type="text/javascript" src="/config.js"></script>
</html>